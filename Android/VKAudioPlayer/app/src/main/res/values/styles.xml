<resources>

    <style name="VKAP"/>

    <style name="VKAP.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="toolbarStyle">@style/VKAP.Toolbar</item>
    </style>

    <style name="VKAP.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="VKAP.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/VKAP.Toolbar.Title</item>
    </style>

    <style name="VKAP.Toolbar.Title" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="VKAP.PlayerButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_btn_player</item>
    </style>

    <style name="VKAP.PlayerButton.Large">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="VKAP.PlayerButton.Medium">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="VKAP.PlayerButton.Small">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

</resources>
